blueprint:
  name: Doubletap Homeseer Switches
  description: Turn multiple devices on/off on doubletap of Homeseer switches
  domain: automation
  input:
    dtap:
      name: Switch to double tap
      selector:
        device:
          multiple: true
          integration: zwave_js
    switch:
      name: Switches to Control
      selector:
        entity:
          multiple: true
          integration: zwave_js
          domain:
            - light
            - switch
  source_url: https://github.com/lkrakauercp/ha/blob/main/doubletap_hs_switches
variables:
  dtap: !input dtap
  switches: !input switch
trigger:
  - platform: event
    event_type: zwave_js_value_notification
condition: "{{
  trigger.event.data.device_id is in(dtap)
  and trigger.event.data.value == 'KeyPressed2x'
  and
  (
  trigger.event.data.property_key_name == '001'
  or  trigger.event.data.property_key_name == '002'
  )
  }}
  "
action:
  - service: "{% if trigger.event.data.property_key_name == '001' %}
      homeassistant.turn_on
      {% else %}
      homeassistant.turn_off
      {% endif %}"
    target:
      entity_id: "{% set ts = namespace(switch=[]) %}
        {% for dv in switches %}
        {% set ts.switch = ts.switch + [dv] %}
        {% endfor %}
        {{ ts.switch | list }}"